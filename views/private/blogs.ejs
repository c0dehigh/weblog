<% if (blogs.length > 0) { %>
    <h2 class="mt-2">Last posts</h2>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>#</th>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th>test</th>
            </tr>
            </thead>
            <tbody>
            <% for (let blog of blogs) {%>
            <tr>
                <td>1</td>
                <td>
                    <a href="/blogs/<%= blog._id %>"></a> <%= blog.title %>
                </td>
                <td><%= blog.crateAt%></td>
                <td>
                    <span class="badge <%= blog.status === 'public' ? 'badge-success' : 'badge-warning'%>">
                        <%= blog.status%>
                    </span>
                </td>
                <td>

                    <a href="/dashboard/edit-post/<%= blog._id%>" class="btn btn-sm btn-primary">Edit</a>

                </td>

                <td>

                    <a href="/dashboard/delete-post/<%= blog._id%>" class="btn btn-sm btn-danger">Delete</a>

                </td>
            </tr>
            <%}%>
            </tbody>
        </table>
    </div>
<%} else {%>
  <div class="text-center">
        <h3 class="mt-2">No post</h3>
  </div>
<%}%>
